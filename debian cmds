sudo nano/etc/sudoers
  envreset,pwfeedback

sudo nano /etc/default/grub
  timeout=2
  quiet splash
sudo update-grub

sudo nano /etc/apt/sources.list
# Repositorios Oficiales Debian 13 (Trixie)
deb http://deb.debian.org/debian/ trixie main contrib non-free non-free-firmware
deb-src http://deb.debian.org/debian/ trixie main contrib non-free non-free-firmware

# Actualizaciones de Seguridad
deb http://security.debian.org/debian-security trixie-security main contrib non-free non-free-firmware
deb-src http://security.debian.org/debian-security trixie-security main contrib non-free non-free-firmware

# Actualizaciones del Sistema (Updates)
deb http://deb.debian.org/debian/ trixie-updates main contrib non-free non-free-firmware
deb-src http://deb.debian.org/debian/ trixie-updates main contrib non-free non-free-firmware

sudo apt install firmware-linux-nonfree firmware-misc-nonfree
sudo apt install ffmpeg libavcodec-extra gstreamer1.0-libav gstreamer1.0-plugins-ugly gstreamer1.0-plugins-bad gstreamer1.0-pulseaudio vorbis-tools curl vlc
sudo apt install intel-media-va-driver-non-free libva-glx2 libva-x11-2 vainfo

Iconos de notificacion en Gnome desktop
sudo apt install gnome-extensions-app
https://extensions.gnome.org/extension/2890/tray-icons-reloaded/

Instalción de navegador Brave
curl -fsS https://dl.brave.com/install.sh | sh

Instalación de Adguard
curl -s -S -L https://raw.githubusercontent.com/AdguardTeam/AdGuardHome/master/scripts/install.sh | sh -s -- -v

Instalación de Jellyfin
curl -s https://repo.jellyfin.org/install-debuntu.sh | sudo bash
   sudo systemctl start jellyfin.service
sudo usermod -a -G $(id -gn) jellyfin
sudo chown -R jellyfin:jellyfin /mnt/sda1/
sudo chmod -R 777 /mnt/sda1/

Instalación de Docker
sudo apt update
sudo apt install ca-certificates curl
sudo install -m 0755 -d /etc/apt/keyrings
sudo curl -fsSL https://download.docker.com/linux/debian/gpg -o /etc/apt/keyrings/docker.asc
sudo chmod a+r /etc/apt/keyrings/docker.asc

echo \
  "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.asc] https://download.docker.com/linux/debian \
  $(. /etc/os-release && echo "$VERSION_CODENAME") stable" | \
  sudo tee /etc/apt/sources.list.d/docker.list > /dev/null
sudo apt update
sudo apt install docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin
sudo usermod -a -G $USER docker

Instalación de Immich
mkdir ./immich-app
cd ./immich-app
wget -O docker-compose.yml https://github.com/immich-app/immich/releases/latest/download/docker-compose.yml
wget -O .env https://github.com/immich-app/immich/releases/latest/download/example.env
nano .env
En la linea UPLOAD_LOCATION=/mnt/sdXX/Immich-app
En la linea de DB_PASSWORD= cambiar por una contraseña segura
sudo docker compose up -d

Revisar que este arriba el servicio:
http://ip_de_la_maquina:2283
