Instalacion portainer
  systemctl enable --now podman.socket
  podman volume create portainer_data
  sudo podman run -d -p 8000:8000 -p 9443:9443 --name portainer --restart=always --privileged -v /run/podman/podman.sock:/var/run/docker.sock -v portainer_data:/data portainer/portainer-ce:lts
  https://localhost:9443

Instalaci√≥n SearXNG
  mkdir -p ~/searxng/settings
  mkdir -p ~/searxng/data
  podman pull docker.io/searxng/searxng:latest
  nano ~/searxng/settings/settings.yml
  # ~/searxng/settings/settings.yml
  general:
    debug: false
    servername: "mi_searxng_local" # Puedes cambiar esto por el nombre que quieras o tu IP
    secret_key: "CAMBIA_ESTO_POR_UNA_CADENA_ALEATORIA_LARGA_Y_SEGURA"

podman run -d \
  --name searxng \
  -p 8888:8080 \
  -v ~/searxng/settings:/etc/searxng/settings:Z \
  -v ~/searxng/data:/var/cache/searxng:Z \
  docker.io/searxng/searxng:latest

Si no se ve SearXNG en containers
  echo $XDG_RUNTIME_DIR/podman/podman.sock
