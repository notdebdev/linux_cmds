--Habilitar RPM fusion, instalar codecs, driver intel--
sudo dnf install https://mirrors.rpmfusion.org/free/fedora/rpmfusion-free-release-$(rpm -E %fedora).noarch.rpm https://mirrors.rpmfusion.org/nonfree/fedora/rpmfusion-nonfree-release-$(rpm -E %fedora).noarch.rpm
sudo dnf swap ffmpeg-free ffmpeg --allowerasing
sudo dnf install intel-media-driver vlc flatpak


--Instalar gnome desktop--
sudo dnf install @gnome-desktop
sudo reboot
sudo systemctl start gdm
sudo dnf install gnome-software-plugin-flatpak
flatpak remote-add --if-not-exists flathub https://dl.flathub.org/repo/flathub.flatpakrepo
Ctrl + Alt + F2
sudo systemctl stop gdm
sudo reboot

--Instalar KDE Plasma--
sudo dnf install @kde-desktop sddm
sudo reboot
sudo systemctl start sddm
sudo dnf install plasma-discover-backend-flatpak
flatpak remote-add --if-not-exists flathub https://dl.flathub.org/repo/flathub.flatpakrepo
Ctrl + Alt + F2
sudo systemctl stop sddm
sudo reboot

<<Podman>>
--Jellyfin--
mkdir -p ~/podman/jellyfin/{config,cache,}
sudo chown -R USUARIO:USUARIO ~/podman/jellyfin

podman run -d \
  --name jellyfin \
  --hostname jellyfin \
  -e PUID=$(id -u fedora) \
  -e PGID=$(id -g fedora) \
  -p 8096:8096 \
  -p 8920:8920 \
  -v /home/fedora/podman/jellyfin/config:/config:Z \
  -v /home/fedora/podman/jellyfin/cache:/cache:Z \
  -v /mnt/XXXX:/media \
  --restart=unless-stopped \
  docker.io/jellyfin/jellyfin

podman generate systemd --name jellyfin --files
systemctl --user daemon-reload
systemctl --user enable --now container-jellyfin.service
mkdir -p ~/.config/systemd/user/
mv /home/fedora/container-jellyfin.service ~/.config/systemd/user/
systemctl --user daemon-reload
systemctl --user enable --now container-jellyfin.service
podman ps -> ya viendo que esta healthy agregar reglas de firewall
sudo firewall-cmd --add-port=8096/tcp --permanent
sudo firewall-cmd --add-port=8920/tcp --permanent
sudo firewall-cmd --reload


--Jellyfin nativo--
sudo dnf install jellyfin
sudo systemctl enable --now jellyfin
sudo firewall-cmd --permanent --add-port=8096/tcp
sudo firewall-cmd --reload
sudo chown -R jellyfin:jellyfin /mnt/XXXX
sudo chmod -R 755 /mnt/media
sudo usermod -aG <USUARIO>
sudo setfacl -R -m u:jellyfin:rx /mnt/XXXX
